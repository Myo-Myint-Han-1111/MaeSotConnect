{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow, nosnippet, noarchive"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/robots.txt",
      "destination": "/api/robots",
      "permanent": true
    }
  ]
}